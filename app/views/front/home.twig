{% extends "front/base.html.twig" %}

{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <header class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ title }}</h1>
            <p class="text-xl text-gray-600">{{ description }}</p>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for article in articles %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:-translate-y-2">
                    {% if article.image %}
                        <img src="{{ article.image }}" class="w-full h-48 object-cover" alt="{{ article.title }}">
                    {% endif %}
                    <div class="p-6">
                        <h5 class="text-xl font-semibold text-gray-900 mb-3">{{ article.title }}</h5>
                        <p class="text-gray-600 mb-4">{{ article.content|slice(0, 150) }}...</p>
                        <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                            Read More
                        </a>
                    </div>
                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
                        <p class="text-sm text-gray-600">
                            Published on {{ article.created_at|date('F j, Y') }}
                        </p>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p>No articles found.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}